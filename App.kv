WindowManager:
    FirstScreen:
    SecondScreen:

<Button>:
    background_normal: ''
    background_color: 69/255,69/255,69/255
    background_down: ''
    font_size: 24


<DelaySelection@Button>:
    text: 'item'

<FirstScreen>:
    BoxLayout:
        size: root.width, 200
        orientation: "vertical"
        canvas.before:
            Color:
                rgb: 40/255, 40/255, 40/255

            Rectangle:
                pos:self.pos
                size:self.size

        Button:
            text: 'New Snip'
            size_hint: (None,None)
            width: 150
            pos_hint: {'top':1}

            # canvas.before:

        GridLayout:
            cols:2
            row:2
            size: root.width, 300
            row_force_default: True
            row_default_height: 50
            column_default_force:True
            column_default_width: 200
            padding: 10

            Label:
                text: 'Path'

            GridLayout:
                cols:2
                TextInput:
                    multiline:False
                    padding: [5, ( self.height - self.line_height ) / 2]

                Button:
                    text: '...'
                    size_hint_x:None
                    width:50
                    font_size: 24

            Label:
                text: 'Delay'

            TextInput:
                multiline: False
                hint_text: '0 (in seconds)'
                input_filter:'float'
                padding: [5, ( self.height - self.line_height ) / 2]