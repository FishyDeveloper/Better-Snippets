WindowManager:
    FirstScreen:
    SecondScreen:

<Label>:
    font_size: 24
    font_name: 'Assets/Fonts/zekton rg.ttf'

<Button>:
    background_normal: ''
    background_color: 69/255,69/255,69/255
    background_down: ''
    font_size: 24

<IconButton@ToggleButton>:
    size_hint: (None,None)
    size: (48,48)

<DelaySelection@Button>:
    text: 'item'

<FirstScreen>:
    name:'first_screen'
    FloatLayout:
        size: root.width, 200
        canvas.before:
            Color:
                rgb: 40/255, 40/255, 40/255

            Rectangle:
                pos:self.pos
                size:self.size

        Button:
            text: 'New Snip'
            size_hint: (None,None)
            width: 150
            pos_hint: {'top':1}

            canvas.before:
                Color:
                    rgba: 0,0,0,1

                Rectangle:
                    pos:self.pos
                    size: self.width+2,self.height

            canvas.after:
                Color:
                    rgba: 0,0,0,1

                Rectangle:
                    pos: self.pos
                    size: (root.width, 2)

        IconButton:
            pos_hint: {'top':0.94,'right':0.94}
            background_color: 0,0,0,0
            id: light_button
            group: 'theme-toggle'
            state:'down'
            on_press: root.toggle_theme()

            Image:
                source: 'Assets/Images/Sun.png'
                center: self.parent.center


        IconButton:
            pos: root.ids.light_button.pos
            background_color: 0,0,0,0
            id: dark_button
            group: 'theme-toggle'
            on_press: root.toggle_theme()

            Image:
                source: 'Assets/Images/Moon.png'
                center: self.parent.center



    GridLayout:
        pos_hint:{'top':.55}
        cols:2
        row:2
        size: root.width, 300
        row_force_default: True
        row_default_height: 50
        column_default_force:True
        column_default_width: 200
        padding: [10,25]
        spacing: [5,10]

        Label:
            text: 'Path'
            size_hint_x:None
            width:90

        GridLayout:
            cols:2
            TextInput:
                multiline:False
                padding: [5, ( self.height - self.line_height ) / 2]

            Button:
                text: '...'
                size_hint_x:None
                width:50
                on_press: print(root)

        Label:
            text: 'Delay'
            size_hint_x:None
            width:90

        TextInput:
            multiline: False
            hint_text: '0 (in seconds)'
            input_filter:'float'
            padding: [5, ( self.height - self.line_height ) / 2]