WindowManager:
    FirstScreen:
    SecondScreen:

<Label>:
    font_size: 24
    font_name: 'Assets/Fonts/zekton rg.ttf'

<Button>:
    background_normal: ''
    background_color: 69/255,69/255,69/255
    background_down: ''
    font_size: 24


<DelaySelection@Button>:
    text: 'item'

<FirstScreen>:
    BoxLayout:
        size: root.width, 200
        orientation: "horizontal"
        canvas.before:
            Color:
                rgb: 40/255, 40/255, 40/255

            Rectangle:
                pos:self.pos
                size:self.size

        Button:
            text: 'New Snip'
            size_hint: (None,None)
            width: 150
            pos_hint: {'top':1}

            # canvas.before:

    GridLayout:
        pos_hint:{'top':.55}
        cols:2
        row:2
        size: root.width, 300
        row_force_default: True
        row_default_height: 50
        column_default_force:True
        column_default_width: 200
        padding: [10,25]
        spacing: [5,10]

        Label:
            text: 'Path'
            size_hint_x:None
            width:90

        GridLayout:
            cols:2
            TextInput:
                multiline:False
                padding: [5, ( self.height - self.line_height ) / 2]

            Button:
                text: '...'
                size_hint_x:None
                width:50
                font_size: 24

        Label:
            text: 'Delay'
            size_hint_x:None
            width:90

        TextInput:
            multiline: False
            hint_text: '0 (in seconds)'
            input_filter:'float'
            padding: [5, ( self.height - self.line_height ) / 2]